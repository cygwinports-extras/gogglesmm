FOX_VERSION=1.6
inherit fox

DESCRIPTION="Goggles Music Manager"
HOMEPAGE="http://code.google.com/p/gogglesmm/"
SRC_URI="http://gogglesmm.googlecode.com/files/${P}.tar.xz"

src_compile() {
	lndirs
	cd ${B}

	LIBEXT=.dll.a \
	LIBS=-lintl \
	./configure \
		--prefix=/usr \
		--dbus-prefix=/usr \
		--fox-prefix=/usr \
		--sqlite-prefix=/usr \
		--taglib-prefix=/usr \
		--xine-prefix=/usr \
		|| error "configure failed"
	cygmake
}
